{
  "name": "najs-eloquent",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "coverage": "jest --coverage --forceExit",
    "test": "jest --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "moduleFileExtensions": ["js", "ts", "json"],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": ["**/test/**/*.test.ts", "**/test/**/*Test.ts"],
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/najs-framework/najs-eloquent.git"
  },
  "author": {
    "name": "Nhat Phan",
    "email": "najs@ntworld.net"
  },
  "dependencies": {
    "@types/pluralize": "^0.0.28",
    "collect.js": "https://github.com/nhat-phan/collect.js",
    "coveralls": "^3.0.0",
    "lodash": "^4.17.4",
    "mongoose": "^5.0.0-rc0",
    "pluralize": "^7.0.0",
    "sinon": "^4.1.3"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/lodash": "^4.14.91",
    "@types/mongoose": "^4.7.31",
    "@types/sinon": "^4.1.2",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
